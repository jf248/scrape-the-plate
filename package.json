{
  "name": "scrape-the-plate",
  "version": "1.0.0",
  "description": "A web app for scraping and collating recipes",
  "scripts": {
    "lint": "yarn lint-django && yarn lint-frontend",
    "format": "yarn format-django && yarn format-frontend",
    "test": "yarn test-django && yarn test-frontend",
    "lint-django": "flake8",
    "lint-frontend": "eslint --fix 'frontend/src/**/*.js'",
    "format-django": ":",
    "format-frontend": "prettier --write 'frontend/src/**/*.js'",
    "test-django": "$VIRTUAL_ENV/bin/python manage.py test",
    "test-frontend": "jest",
    "heroku-postbuild": "cd frontend/ && yarn install && yarn run build",
    "dumpdata": "$VIRTUAL_ENV/bin/python manage.py dumpdata --indent=2 recipes > fixtures-data/dumped.json ",
    "precommit": "lint-staged && yarn test-django"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jf248/scrape-the-plate.git"
  },
  "keywords": [
    "recipes"
  ],
  "author": "Joshua Freedman",
  "license": "MIT",
  "homepage": "https://github.com/jf248/scrape-the-plate#readme",
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-preset-react-app": "^3.1.2",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "dependencies": {}
}
