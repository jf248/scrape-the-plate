{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import",
        "jest"
    ],
    "rules": {
        "no-console": "off",
        "react/prop-types": "off",
        "react/display-name": "off",
        "no-restricted-globals": "error"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": [
                    "frontend/src",
                    "frontend/node_modules"
                ]
            }
        }
    }
}
